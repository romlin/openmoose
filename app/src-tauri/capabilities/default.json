{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    {
      "identifier": "shell:default",
      "allow": [
        {
          "name": "node-run",
          "cmd": "node",
          "args": [
            "gateway/server.js"
          ]
        },
        {
          "name": "node-version",
          "cmd": "node",
          "args": [
            "--version"
          ]
        },
        {
          "name": "pnpm-gateway",
          "cmd": "pnpm",
          "args": [
            "run",
            "gateway"
          ]
        },
        {
          "name": "npm-gateway",
          "cmd": "npm",
          "args": [
            "run",
            "gateway"
          ]
        },
        {
          "name": "docker-info",
          "cmd": "docker",
          "args": [
            "info"
          ]
        }
      ]
    }
  ]
}