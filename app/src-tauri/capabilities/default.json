{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    {
      "identifier": "shell:default",
      "allow": [
        {
          "name": "npm",
          "args": [
            "run",
            "gateway"
          ]
        },
        {
          "name": "pnpm",
          "args": [
            "run",
            "gateway"
          ]
        },
        {
          "name": "docker",
          "args": [
            "info"
          ]
        }
      ]
    }
  ]
}